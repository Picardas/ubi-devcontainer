// For format details, see https://aka.ms/devcontainer.json. For config options, see the
{
	"name": "Red Hat",
	"build": {
        "dockerfile": "Containerfile"
    },

	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": "false",
            "installOhMyZsh": "false",
            "installOhMyZshConfig": "false",
            "username": "vscode",
			"userUid": "1000",
			"userGid": "1000",
            "upgradePackages": "true"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "version": "latest",
            "optimize": "true"

        }
    },

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Configure tool-specific properties.
	"customizations": {
        "vscode": {
            "extensions": [
                "metaseed.metago"
            ]
        }
    },

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"

	// Set default user
	"containerUser": "vscode",

	// Configure container environment variable
    "containerEnv": {
        "SSH_AUTH_SOCK": "${localEnv:SSH_AUTH_SOCK}",
        "DISPLAY": "${localEnv:HOST_DISPLAY}",
        "SHELL": "${localEnv:HOST_SHELL}",
        "XDG_SESSION_TYPE": "${localEnv:XDG_SESSION_TYPE}"
    },

	// Toolbx inspired arguments to allow for Yubikey SSH key signing
    "runArgs": [
        "--userns=keep-id",
        "--security-opt",
        "label=disable",
        "--format=docker",
        "--ipc=host",
        "--volume=${localEnv:HOME}/.ssh:/home/vscode/.ssh:ro,rslave"
    ]
}
